<div class="navbar fixed-top navbar-expand-sm navbar-dark bg-dark">
  <%= link_to root_path, class: "navbar-brand" do %>
    Pulse
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Check In", new_checkin_path, class: "nav-link btn btn-primary" %>
        </li>
      <% end %>

      <li class="nav-item dropdown">
        <%= link_to 'Menu', '#', class: "nav-link dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if user_signed_in? %>
            <%= link_to 'My page', user_path(current_user), class: 'dropdown-item' %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          <% else %>
            <%= link_to "Login", new_user_session_path, class: "dropdown-item" %>
          <% end %>
        </div>
      </li>
      <li class="nav-item">
        <%= render 'shared/find_user_form' %>
      </li>
    </ul>
  </div>
</div>
